<%= form_for @cost, :html => { :class => "form-horizontal cost" } do |f| %>

    <% if @cost.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@cost.errors.count, "error") %> prohibited this cost from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @cost.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :purchaser_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :purchaser_name, :class => 'form-control' %>
    </div>
    <%= error_span(@cost[:purchaser_name]) %>
  </div>
  <div class="control-group">
    <%= f.label :item_description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :item_description, :class => 'form-control' %>
    </div>
    <%= error_span(@cost[:item_description]) %>
  </div>
  <div class="control-group">
    <%= f.label :item_price, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :item_price, :class => 'form-control' %>
    </div>
    <%= error_span(@cost[:item_price]) %>
  </div>
  <div class="control-group">
    <%= f.label :merchant_address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :merchant_address, :class => 'form-control' %>
    </div>
    <%= error_span(@cost[:merchant_address]) %>
  </div>
  <div class="control-group">
    <%= f.label :merchant_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :merchant_name, :class => 'form-control' %>
    </div>
    <%= error_span(@cost[:merchant_name]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            costs_path, :class => 'btn btn-default' %>

<% end %>
