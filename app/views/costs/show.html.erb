<%- model_class = Cost -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:purchaser_name) %>:</strong></dt>
  <dd><%= @cost.purchaser_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:item_description) %>:</strong></dt>
  <dd><%= @cost.item_description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:item_price) %>:</strong></dt>
  <dd><%= @cost.item_price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:merchant_address) %>:</strong></dt>
  <dd><%= @cost.merchant_address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:merchant_name) %>:</strong></dt>
  <dd><%= @cost.merchant_name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              costs_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_cost_path(@cost), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              cost_path(@cost),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
